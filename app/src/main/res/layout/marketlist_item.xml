<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/marketlist_item_image_market"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/linearLayout" />

    <TextView
        android:id="@+id/marketlist_item_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/marketlist_item_image_market"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="abcdeftaaa"
        />

    <RatingBar
        android:id="@+id/marketlist_item_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marketlist_item_text_name"
        android:layout_toRightOf="@+id/marketlist_item_image_market"
        android:layout_marginLeft="8dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize="0.5"
        style="?android:attr/ratingBarStyleSmall"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:layout_below="@+id/marketlist_item_ratingbar"
        android:layout_toRightOf="@+id/marketlist_item_image_market"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_weight="1"
            android:id="@+id/marketlist_item_text_food1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:text="food1"
            android:textColor="#000000"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/marketlist_item_text_food2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:text="food2"
            android:textColor="#000000"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/marketlist_item_text_food3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:text="food3"
            android:textColor="#000000"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


</RelativeLayout>