<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/marketpic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.sijang.FirstMainActivity">

    <Button
        android:id="@+id/button_chagne"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:layout_x="58dp"
        android:layout_y="566dp"
        android:background="#91191818"
        android:text="Click to Start"
        android:textColor="#fafafa"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="192dp"
        android:layout_height="187dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center"
        android:background="@drawable/marketlogopic3" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp" />

</FrameLayout>
